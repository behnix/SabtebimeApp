@model App.DTOs.Account.VerifyCode
@{
    ViewData["Title"] = "بررسی کد تائید";
}

<div class="pageSection">
    <div class="ls-container">
        <div class="pageSection-title ls-center">@ViewData["Title"]</div>
        <div class="container-fluid">
            <form asp-route="PostVerifyCode" asp-route-returnTo="@Model.ReturnTo">

                <input asp-for="RememberMe" type="hidden" />
                <input asp-for="Provider" type="hidden" />

                <div class="form-group ls-right">
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group form-check ls-right">
                    <input asp-for="RememberBrowser" class="form-check-input">
                    <label class="form-check-label pr-3" for="RememberBrowser">مرورگر را به خاطر بسپار</label>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="ls-center ls-btnContainer">
                    <button type="submit" class="btn btn-success">بررسی کد تائید</button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}