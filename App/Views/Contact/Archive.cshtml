@using App.Core.Convertors
@model IEnumerable<App.Domain.Entities.Contact.Contact>
@{
    ViewData["Title"] = "پیام های خوانده شده";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a asp-route="GetDashboard">داشبورد</a>
            <li>
                @ViewData["Title"]
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewData["Title"]</h5>
                </div>
                <div class="ibox-content">
                    @if (Model.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        نام و نام خانوادگی
                                    </th>
                                    <th>
                                        موضوع
                                    </th>
                                    <th>
                                        تاریخ ارسال
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var i = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="pt-20">
                                            @(i++)
                                        </td>
                                        <td class="pt-20">
                                            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td class="pt-20">
                                            @Html.DisplayFor(modelItem => item.Subject)
                                        </td>
                                        <td class="pt-20">
                                            @item.PostedOn.ToLongShamsi()
                                        </td>
                                        <td class="pt-15">
                                            <a asp-route="GetReadContact" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fa fa-pencil"></i> نمایش پیام</a>
                                            <a asp-route="GetRemoveContact" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-times"></i> حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        @:هیچ پیامی در بایگانی پیام ها وجود ندارد.
                    }
                </div>
            </div>
        </div>
    </div>
</div>

