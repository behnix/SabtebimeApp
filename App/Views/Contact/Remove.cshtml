@model App.Domain.Entities.Contact.Contact
@{
    ViewData["Title"] = "حذف گروه";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li class="active">
            <a asp-route="GetDashboard">داشبورد</a>
            <li>
                @ViewData["Title"]
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>آیا از حذف این پیام اطمینان دارید؟</h5>
                </div>
                <div class="ibox-content">

                    <p>
                        @Html.DisplayNameFor(model => model.Subject) :
                        @Html.DisplayFor(model => model.Subject)
                    </p>
                    <p>
                        @Html.DisplayNameFor(model => model.Text) :
                        @Html.DisplayFor(model => model.Text)
                    </p>
                    <br />
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="FirstName" />
                        <input type="hidden" asp-for="LastName" />
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Subject" />
                        <input type="hidden" asp-for="Text" />
                        <input type="hidden" asp-for="Answer" />
                        <input type="hidden" asp-for="IsRead" />
                        <input type="hidden" asp-for="PostedOn" />
                        <input type="submit" value="بله پیام حذف شود؟" class="btn btn-danger btn-sm" />
                        <a asp-route="GetNewContact" class="btn btn-info btn-sm">بازگشت</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>