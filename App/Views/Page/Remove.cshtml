@model App.Domain.Entities.Page.Page

@{
    ViewData["Title"] = "حذف صفحه";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a asp-route="GetDashboard">داشبورد</a>
            <li>
                @ViewData["Title"]
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>آیا از حذف این صفحه اطمینان دارید؟</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-12">
                            <p>
                                @Html.DisplayNameFor(model => model.PageTitle) :
                                @Html.DisplayFor(model => model.PageTitle)
                            </p>
                            <p>
                                @Html.DisplayNameFor(model => model.PageDescriptionForSearchEngines) :
                                @Html.DisplayFor(model => model.PageDescriptionForSearchEngines)
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <br />
                            <form method="post">
                                <input type="hidden" asp-for="PageId" />
                                <input type="submit" value="بله صفحه حذف شود؟" class="btn btn-danger btn-sm" />
                                <a asp-route="GetPages" class="btn btn-info btn-sm">بازگشت</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

