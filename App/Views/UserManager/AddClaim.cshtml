@model App.DTOs.Manager.User.AddUserClaim
@{
    ViewData["Title"] = "افزودن مشخصه به کاربر";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a asp-route="GetDashboard">داشبورد</a>
            </li>
            <li>
                @ViewData["Title"]
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewData["Title"]</h5>
                </div>
                <div class="ibox-content">
                    <form asp-route="PostAddUserClaim">
                        <div class="form-group">
                            <input asp-for="ClaimType" class="form-control" placeholder="نوع مشخصه">
                            <span asp-validation-for="ClaimType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ClaimValue" class="form-control" placeholder="مقدار مخصه">
                            <span asp-validation-for="ClaimValue" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="ls-center ls-btnContainer">
                            <button type="submit" class="btn btn-success">افزودن مشخصه</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}