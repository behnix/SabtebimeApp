@model App.DTOs.Manager.User.EditUser
@{
    ViewData["Title"] = "ویرایش کاربر";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a asp-route="GetDashboard">داشبورد</a>
            </li>
            <li>
                @ViewData["Title"]
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewData["Title"]</h5>
                </div>
                <div class="ibox-content">
                    <form asp-route="PostEditUser">
                        <input type="hidden" asp-for="UserName" />

                        <div class="form-group">
                            <input asp-for="FirstName" class="form-control" placeholder="نام">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Age" class="form-control" placeholder="سن">
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <select class="form-control" asp-for="Gender">
                                <option value="Man">مرد</option>
                                <option value="Woman">زن</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input asp-for="CellPhone" class="form-control" placeholder="شماره موبایل">
                            <span asp-validation-for="CellPhone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Address" class="form-control" placeholder="آدرس پستی">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="TelegramId" class="form-control" placeholder="آیدی تلگرام">
                            <span asp-validation-for="TelegramId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="InstagramId" class="form-control" placeholder="آیدی اینستاگرام">
                            <span asp-validation-for="InstagramId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="TwitterId" class="form-control" placeholder="آیدی توییتر">
                            <span asp-validation-for="TelegramId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Description" class="form-control" placeholder="درباره کاربر">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="ls-center ls-btnContainer">
                            <button type="submit" class="btn btn-success">ثبت تغییرات</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}