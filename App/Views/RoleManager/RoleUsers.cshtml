@using App.Core.Convertors
@model IEnumerable<App.Domain.Identity.User>
@{
    ViewData["Title"] = "کاربران دارای نقش ";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a asp-route="GetDashboard">داشبورد</a>
            <li>
                @ViewData["Title"]
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewData["Title"]</h5>
                </div>
                <div class="ibox-content">
                    @if (Model.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        #
                                    </th>
                                    <th class="text-center">
                                        نام و نام خانوادگی
                                    </th>
                                    <th class="text-center">
                                        نام کاربری
                                    </th>
                                    <th class="text-center">
                                        پست الکترونیکی
                                    </th>
                                    <th class="text-center">
                                        تاریخ ثبت نام
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var i = 1;}
                                @foreach (var item in Model.@*Where(u => u.UserName !=User.Identity.Name).*@OrderByDescending(p => p.Id))
{
<tr>
    <td class="pt-20 text-center">
        @(i++)
    </td>
    <td class="pt-20 text-center">
        @item.FirstName @item.LastName
    </td>
    <td class="pt-20 text-center">
        @item.UserName
    </td>
    <td class="pt-20 text-center">
        @item.Email
    </td>
    <td class="pt-20 text-center">
        @item.RegisteredOn.ToShamsi()
    </td>
</tr>
}
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>هیچ کاربری در این نقش موجود نیست</p>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

